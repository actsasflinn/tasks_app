<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="{{ pictureName }}" />
  </Page.actionBar>
  <GridLayout rows="auto, *, auto">
    <Image row="1" src="{{ cameraImage }}" id="image" stretch="fill" margin="10"/>
    <Button text="Take Picture" tap="takePicture"  row="2" padding="10"/>
  </GridLayout>
</Page>