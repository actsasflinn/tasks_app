<Page loaded="loaded">
  <ActivityIndicator busy="{{ isUploading }}" />
  <Page.actionBar>
    <ActionBar title="{{ item.name }}" />
  </Page.actionBar>
  <GridLayout rows="auto, *, auto">
    <Image row="1" src="{{ item.picture }}" id="picture" stretch="fill" margin="10"/>

    <TextField id="description" text="{{ item.description }}" hint="description" row="0" col="0" />
    <Button text="Take Picture" tap="takePicture"  row="2" padding="10"/>
  </GridLayout>
</Page>