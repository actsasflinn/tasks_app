<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="Home">
      <ActionBar.actionItems />
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="auto, *" columns="2*, *">
    <TextField id="item" text="{{ item }}" hint="Item" row="0" col="0" />
    <Button text="Add" tap="add" row="0" col="1" />
    <ListView items="{{ itemList }}" id="itemList" row="1" colSpan="2">
      <ListView.itemTemplate>
        <GridLayout columns="*, auto">
          <Label text="{{ name }}" tap="picture" />
          <Image src="res://ic_menu_delete" ios:visibility="collapsed" col="1" tap="delete" />
        </GridLayout>
      </ListView.itemTemplate>
    </ListView>
    <ActivityIndicator busy="{{ isLoading }}" rowSpan="2" colSpan="2" />
  </GridLayout>
</Page>